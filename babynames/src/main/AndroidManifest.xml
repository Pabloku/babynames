<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kamisoft.babyname">

  <application
      android:name="com.kamisoft.babynames.BabyNamesApp"
      android:allowBackup="false"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name="com.kamisoft.babynames.presentation.main.MainActivity"
        android:theme="@style/AppTheme.Splash">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="com.kamisoft.babynames.presentation.parent_names.ParentNamesActivity"
        android:windowSoftInputMode="adjustPan"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name="com.kamisoft.babynames.presentation.find_matches.FindMatchesActivity"
        android:windowSoftInputMode="adjustPan"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name="com.kamisoft.babynames.presentation.contact.ContactActivity"
        android:windowSoftInputMode="adjustPan"
        android:screenOrientation="portrait">
    </activity>
    <activity
        android:name="com.kamisoft.babynames.presentation.names_list.NamesListActivity"
        android:windowSoftInputMode="adjustPan"
        android:screenOrientation="portrait">
    </activity>


    <receiver
        android:name="com.kamisoft.babynames.broadcast_receivers.BootReceiver"
        android:enabled="true"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED"/>
        <action android:name="android.intent.action.QUICKBOOT_POWERON"/>
      </intent-filter>
    </receiver>
    <receiver
        android:name="com.kamisoft.babynames.broadcast_receivers.UpgradeReceiver"
        android:enabled="true"
        android:exported="true">
      <intent-filter>
        <action android:name="android.intent.action.MY_PACKAGE_REPLACED"/>
      </intent-filter>
    </receiver>

    <!-- ALARMS RECEIVER -->
    <receiver android:name="com.kamisoft.babynames.alarms.AlarmDaily"/>
  </application>

</manifest>